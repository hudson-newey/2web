{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dev Server",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "run-dev-server",
      // Launch a no-op Node process that immediately exits so the configuration
      // only runs the task.
      // TODO: Find a better way to do this.
      "runtimeExecutable": "node",
      "runtimeArgs": ["-e", "process.exit(0)"]
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:2000",
      "webRoot": "${workspaceFolder}/src"
    }
  ],
  "compounds": [
    {
      "name": "Dev Environment",
      "configurations": ["Dev Server", "Launch Chrome"]
    }
  ]
}
